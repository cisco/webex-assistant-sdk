            "allowEmptyValue": false,
            "deprecated": false,
            "in": "path",
            "name": "skill_id"
          }
        ],
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SkillUpdateRequest"
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Developer Skills"
        ],
        "summary": "Deletes a skill",
        "description": "This will delete a skill. If the 'HARD_DELETE' query param is specifed and there are no orgregistrations, the skill will be completely deleted from the service. Otherwise this justmakes a soft delete.",
        "responses": {
          "204": {
            "description": "The resource was deleted successfully."
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "description": "id of developer",
            "required": true,
            "allowEmptyValue": false,
            "deprecated": false,
            "in": "path",
            "name": "user_id"
          },
          {
            "schema": {
              "type": "string"
            },
            "description": "id of skill",
            "required": true,
            "allowEmptyValue": false,
            "deprecated": false,
            "in": "path",
            "name": "skill_id"
          },
          {
            "schema": {
              "type": "string"
            },
            "description": "Specifies if we the skills needs to be hard deleted.",
            "required": false,
            "allowEmptyValue": false,
            "deprecated": false,
            "in": "query",
            "name": "HARD_DELETE"
          }
        ]
      }
    },
