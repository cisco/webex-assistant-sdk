{
  "info": {
    "title": "Assistant Skills Service API",
    "version": "1.0"
  },
  "openapi": "3.0.3",
  "servers": [
    {
      "url": "https://assistant.us-east-2.intelligence.webex.com/skills/api"
    }
  ],
  "paths": {
    "/developers/{user_id}/skills": {
      "post": {
        "tags": [
          "Developer Skills"
        ],
        "summary": "Creates a skill",
        "description": "Creates a skill using the information provided. This will also add a developer registrationto the skill, so the developer can start using it right after creation.",
        "responses": {
          "200": {
            "description": "The newly created skill.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SkillCreateResponse"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "description": "id of developer",
            "required": true,
            "allowEmptyValue": false,
            "deprecated": false,
            "in": "path",
            "name": "user_id"
          }
        ],
        "requestBody": {
          "description": "",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SkillCreateRequest"
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Developer Skills"
        ],
        "summary": "Gets all skills",
        "description": "Returns the skills owned by the developer.",
        "responses": {
          "200": {
            "description": "The developer skills.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SkillGetResponse"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "description": "id of developer",
            "required": true,
            "allowEmptyValue": false,
            "deprecated": false,
            "in": "path",
            "name": "user_id"
          }
        ]
      }
    },
