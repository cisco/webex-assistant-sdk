            "schema": {
              "type": "string"
            },
            "description": "id of skill",
            "required": true,
            "allowEmptyValue": false,
            "deprecated": false,
            "in": "path",
            "name": "skill_id"
          }
        ]
      },
      "patch": {
        "tags": [
          "Developer Skills"
        ],
        "summary": "Modifies a skill",
        "description": "Updates an existing skill with the information provided.",
